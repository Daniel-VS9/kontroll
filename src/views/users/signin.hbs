<div class="columns is-centered">
    <div class="column is-4">

        <div class="box">
            
            {{> errors}}

            <h3 class="subtitle is-2">Ingresar</h3>

            <form action="/users/signin" method="POST">

                <div class="field">
                    <label class="label">Email</label>
                    <div class="control">
                        <input name='email' class="input" type="email" placeholder="user@gmail.com" autofocus>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Password</label>
                    <div class="control">
                        <input name='pass' class="input" type="password" placeholder="********" >
                    </div>
                </div>


                <div class="field">
                    <div class="control">
                        <div class="buttons is-right">
                            <button type="submit" class="button is-primary is-right">Ingresar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>