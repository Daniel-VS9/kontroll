<div class="columns is-centered">
    <div class="column is-4">

        <div class="box">
            {{!-- {{#each errors}}
                <div class="notification is-danger is-light">
                    <button class="delete"></button>
                    {{text}}
                </div>
            {{/each}} --}}

            {{> errors}}

            <h3 class="subtitle is-2">Crear producto</h3>

            <form action="/products/addProduct" method="POST">
                <div class="field">
                    <label class="label">Nombre</label>
                    <div class="control">
                        <input name='name' class="input" type="text" placeholder="Nombre" autofocus>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Precio</label>
                    <div class="control">
                        <input name='price' class="input" type="text" placeholder="10000" autofocus>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Descripcion</label>
                    <div class="control">
                        <textarea name='description' class="textarea" placeholder="..."></textarea>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button is-primary">Guardar</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>