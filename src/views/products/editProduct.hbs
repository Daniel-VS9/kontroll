<div class="columns is-centered">
    <div class="column is-8-tablet is-5-desktop is-4-widescreen">

        <div class="box">
            {{#each errors}}
                <div class="notification is-danger is-light">
                    <button class="delete"></button>
                    {{text}}
                </div>
            {{/each}}

            <h3 class="subtitle is-2">Editar producto</h3>

            <form action="/products/editProduct/{{product._id}}?_method=PUT" method="POST">
                <input type="hidden", name="_method" value="PUT">
                <div class="field">
                    <label class="label">Nombre</label>
                    <div class="control">
                        <input name='name' class="input" type="text"  value='{{product.name}}'>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Precio</label>
                    <div class="control">
                        <input name='price' class="input" type="text" placeholder="10000" value="{{product.price}}">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Descripcion</label>
                    <div class="control">
                        <textarea name='description' class="textarea" placeholder="...">{{product.description}}</textarea>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button is-primary">Guardar</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>